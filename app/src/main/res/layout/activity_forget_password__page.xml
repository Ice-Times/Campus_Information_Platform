<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background1"
    tools:context=".ForgetPassword_Page">

    <LinearLayout
        android:id="@+id/Layout_Forget"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="25dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="输入账户名"
            android:textSize="22sp" />

        <EditText
            android:id="@+id/ForgetPassword_EditText_UserName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="账户名"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/Confirm_Bt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="确定"
            android:textSize="17sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="密保问题"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Forget_Sec_Qes"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:hint="请先输入账户名并点击确定"
                android:text=""
                android:textColor="#515151"
                android:textColorHint="#EAEAEA"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/ForgetPassword_EditText_SecAns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="密保答案"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/Confirm_Bt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:text="确定"
            android:textSize="17sp" />

<!--        <EditText-->
<!--            android:id="@+id/ForgetPassword_EditText_AfterPassword"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_weight="1"-->
<!--            android:ems="10"-->
<!--            android:hint="请输入新密码"-->
<!--            android:inputType="textPersonName" />-->


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>