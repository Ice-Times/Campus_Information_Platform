<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.campusinformationplatform">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="com.miui.whetstone.permission.ACCESS_PROVIDER" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:name=".Global_Value"
        android:allowBackup="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdateRelease"></activity>
        <activity android:name=".ForgetPassword_Page" />
        <activity android:name=".MessageSelf_Page" />
        <activity android:name=".ReleaseSelf_Page" />
        <activity
            android:name=".Details_Page"
            android:parentActivityName=".Main_Page" />
        <activity android:name=".EnlargeImg_Page" />
        <activity
            android:name=".Release_Page"
            android:parentActivityName=".Main_Page" />
        <activity
            android:name=".Main_Page"
            android:launchMode="singleTask" />
        <activity android:name=".SignIn_Page">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SignUp_Page"
            android:parentActivityName=".SignIn_Page"/>
        <activity android:name=".MainActivity" />
    </application>

</manifest>